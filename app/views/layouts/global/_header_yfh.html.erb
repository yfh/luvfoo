<div id="top-navigation">
  <form action="/search" style='margin:0px;padding:0px;'>
	<ul class="top-nav">
		<li class="first"><a href="http://<%= GlobalConfig.application_base_url %>/"><%= _('Home') %></a></li>
		<li><a href="<%= groups_path %>"><%= _('Groups') %></a></li>
		<li><a href="<%= profiles_path %>"><%= _('People') %></a></li>
		<li><a href="<%= photos_path %>"><%= _('Photos') %></a></li>
		<li><a href="<%= videos_path %>"><%= _('Videos') %></a></li>
		<li><a href="<%= working_groups_path %>"><%= _('Working Groups') %></a></li>
		<li><a href="http://<%= GlobalConfig.application_base_url %>/courses"><%= _('Courses') %></a></li>
	</ul>
	<div id="log-out" class="right">
		<span id='search'>
		  	<script type='text/javascript'>function searchClicked(){sb=document.getElementById('search_box');sb.style.color='black';if (sb.value == '<%= _('Search')%>') sb.value='';}</script>
		  	<input id='search_box' type='text' name='q' value='<%= _('Search') %>' onclick='searchClicked();'/>
	      <button style='height:22px;'><span style='line-height:13px;vertical-align:middle;'><%= _('Go') %></span></button>
	    </span>
	<% if logged_in? -%>
		<%= link_to _('My Dashboard'), user_path(current_user) %>
		<%= link_to current_user.login, profile_path(current_user) %>
		<%= link_to _('Logout'), logout_path %>
	<% else -%>
		<%= _("%{login_link} %{signup_link}") % {:login_link => link_to(_('Login'), login_path), :signup_link => link_to(_('Sign-up'), signup_path)} %>
	<% end -%>
        <%= locale.to_s == "yfh_EN" ? '<a href="?lang=yfh-tr">T&#xFC;rk&#xE7;e</a>' : '<a href="?lang=yfh-en">English</a>' %>
	</div>
  </form>
</div>

